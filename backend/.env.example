# Server Configuration
PORT=3000

# EVM Configuration (Anvil)
# URL for the EVM chain to fork (e.g., Moonbeam, Ethereum Mainnet)
FORK_URL_EVM=https://rpc.api.moonbeam.network
# Native token symbol for the EVM chain (e.g., GLMR, ETH)
NATIVE_SYMBOL=GLMR

# WASM Configuration (Chopsticks)
# URL for the WASM chain to fork (e.g., Astar, Polkadot)
FORK_URL_WASM=https://astar.api.onfinality.io/public
# Native token symbol for the WASM chain (e.g., ASTR, DOT)
NATIVE_SYMBOL_WASM=ASTR
# Port for the Chopsticks RPC server
CHOPSTICKS_PORT=8546
